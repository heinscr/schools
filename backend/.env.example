# DynamoDB Configuration
# For local development, leave DYNAMODB_ENDPOINT commented out to use AWS
# To use DynamoDB Local, set: DYNAMODB_ENDPOINT=http://localhost:8000
# DYNAMODB_ENDPOINT=http://localhost:8000
AWS_REGION=us-east-2
DYNAMODB_DISTRICTS_TABLE=app-schools-districts
SALARIES_TABLE_NAME=app-schools-teacher-salaries
SCHEDULES_TABLE_NAME=app-schools-teacher-salary-schedules
DISTRICTS_TABLE_NAME=app-schools-districts

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
# Custom domain for production (used in CORS allowed origins)
CUSTOM_DOMAIN=app.com
# CloudFront domain (automatically set by deployment, can override for local testing)
# CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# Environment Configuration
# Set to 'development', 'dev', or 'local' for detailed error messages
# Set to 'production' or 'prod' for sanitized error messages
ENVIRONMENT=production

# Rate Limiting Configuration
# General API endpoints rate limit (requests per time period)
RATE_LIMIT_GENERAL=100/minute
# Search endpoints rate limit (more restrictive)
RATE_LIMIT_SEARCH=30/minute
# Write endpoints (POST/PUT/DELETE) rate limit
RATE_LIMIT_WRITE=20/minute
# Storage URI for rate limit data (memory:// for local, redis://host:port for production)
RATE_LIMIT_STORAGE_URI=memory://
